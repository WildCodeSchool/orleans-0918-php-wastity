{% extends 'Admin/layoutAdmin.html.twig' %}
{% block title %}Wastity - Admin Offres{% endblock %}
{% block body %}
    <div class="container">
        <table class="table table-striped mt-5 mb-5">
            <tbody>
            <tr>
                <th scope="col">Quantité</th>
                <td>{{ offer.weight }}</td>
            </tr>
            <tr>
                <th scope="col">Date</th>
                <td>{{ offer.end ? offer.end|date('d/m') : '' }}</td>
            </tr>
            <tr>
                <th scope="col">image</th>
                <td><img src="{{ offer.picture ? vich_uploader_asset(offer, 'pictureFile') : asset('/build/images/wastityPlaceHolder.png') }}"
                         alt="ImageOffre"/></td>
            </tr>
            <tr>
                <th scope="col">Description</th>
                <td>{{ offer.description }}</td>
            </tr>
            <tr>
                <th scope="col">Informations Complémentaires</th>
                <td>{{ offer.complementary }}</td>
            </tr>
            <tr>
                <th scope="col">Entreprise</th>
                <td>{{ offer.company.name }}</td>
            </tr>
            {% if offer.association is not null %}
                <tr>
                    <th scope="col">Association bénéficiaire</th>
                    <td>{{ offer.association.name}}</td>
                </tr>
            {% endif %}
            {% if offer.foodhero is not null %}
                <tr>
                    <th scope="col">FoodHero</th>
                    <td>{{ offer.foodhero.user.fullname}}</td>
                </tr>
            {% endif %}
            <tr>
                <th scope="col">Statut</th>
                <td>{{ offer.status.statustext }}</td>
            </tr>
            <tr>
                <th scope="col">
                    Activer/Désactiver
                </th>
                <td>
                    <a href="{{ path('offer_admin_activate', {'id': offer.id}) }}">
                        <button type="button" class="btn btn-{{offer.active ? 'danger' : 'success' }}" data-toggle="button" aria-pressed="{{offer.active}}">
                            {{offer.active ? 'Inactif' : 'Actif' }}
                        </button>
                    </a>
                </td>
            </tr>
            </tbody>
        </table>
        <div class="row">
            <a class="col text-center" href="{{ path('offer_admin_index') }}">Retour à la liste des Offres</a>
        </div>
    </div>
{% endblock %}

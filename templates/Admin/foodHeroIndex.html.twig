{% extends 'Admin/layoutAdmin.html.twig' %}

{% block title %}Wastity - Admin Food Heroes{% endblock %}

{% block header %}
    <div class="row">
        <a class="col-md-3 text-md-right text-left" href="{{ path('admin_index') }}">
            <i class="fas fa-chevron-left text-secondary">Retour au panneau d'administration</i></a>
        <h1 class="col-md text-center">Liste des Food Heroes</h1>
        <div class="offset-md-3"></div>
    </div>
{% endblock %}

{% block body %}
    <div class="container">

        <table class="table table-striped mt-5 mb-2">
            <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Numéro de téléphone</th>
                <th scope="col">
                    <div class="d-none d-md-block">Photo de Profil</div>
                </th>
            </tr>
            </thead>
            <tbody>
            {% for appointment in appointments %}
                <tr>
                    <td>{{ appointment.user.fullname }}</td>
                    <td>{{ appointment.phone }}</td>
                    <td>
                        <div class="d-none d-md-block">
                            <img src="{{ appointment.profileImage ? vich_uploader_asset(appointment, 'profileImageFile') : asset('/build/images/wastityPlaceHolder.png') }}"
                                 alt="Image de profil"/></div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td>Aucun Food Hero à afficher</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="d-flex justify-content-center mt-5">
        {{ knp_pagination_render(appointments) }}
    </div>
{% endblock %}

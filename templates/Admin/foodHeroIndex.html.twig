{% extends 'Admin/layoutAdmin.html.twig' %}

{% block title %}FoodHero index{% endblock %}

{% block header %}
    <div class="row">
        <a class="col-md-3 text-md-right text-left" href="{{ path('admin_index') }}">
            <i class="fas fa-chevron-left text-secondary">Retour au panneau d'administration</i></a>
        <h1 class="col-md text-center">Liste des Food Heroes</h1>
        <div class="offset-md-3"></div>
    </div>
{% endblock %}

{% block body %}
    <div class="container">

        <table class="table table-striped mt-5 mb-2">
            <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Numéro de téléphone</th>
                <th scope="col">
                    <div class="d-none d-md-block">Photo de Profil</div>
                </th>
            </tr>
            </thead>
            <tbody>
            {% for food_hero in food_heroes %}
                <tr>
                    <td>{{ food_hero.user.fullname }}</td>
                    <td>{{ food_hero.phone }}</td>
                    <td>
                        <div class="d-none d-md-block">
                            <img src="{{ food_hero.profileImage ? vich_uploader_asset(foodhero, 'profileImageFile') : asset('/build/images/wastityPlaceHolder.png') }}"
                                 alt="Image de profil"/></div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td>Aucun Food Hero à afficher</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

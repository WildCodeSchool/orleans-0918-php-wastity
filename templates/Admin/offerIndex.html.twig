{% extends 'Admin/layoutAdmin.html.twig' %}

{% block title %}Offres index{% endblock %}

{% block header %}
    <div class="row">
        <a class="col-md-3 text-md-right text-left" href="{{ path('admin_index') }}">
            <i class="fas fa-chevron-left text-secondary">Retour au panneau d'administration</i></a>
        <h1 class="col-md text-center">Liste des Offres</h1>
        <div class="offset-md-3"></div>
    </div>
{% endblock %}

{% block body %}
    <div class="container">

        <table class="table table-striped mt-5 mb-2">
            <thead>
            <tr>
                <th scope="col">Début</th>
                <th scope="col">Fin</th>
                <th scope="col">
                    <div class="d-none d-md-block">Poids</div>
                </th>
                <th scope="col">
                    <div class="d-none d-md-block">Description</div>
                </th>

                <th class="text-center" scope="col">Voir plus</th>
            </tr>
            </thead>
            <tbody>
            {% for offer in offers %}
                <tr>
                    <td>{{ offer.start ? offer.start|date('Y-m-d H:i') : '' }}</td>
                    <td>{{ offer.end ? offer.end|date('Y-m-d H:i') : '' }}</td>
                    <td>
                        <div class="d-none d-md-block">{{ offer.weight }}</div>
                    </td>
                    <td>
                        <div class="d-none d-md-block">{{ offer.description }}</div>
                    </td>
                    <td>
                        <div class="text-center">
                            <a href="{{ path('offer_admin_show', {'id': offer.id}) }}">
                                <i class="far fa-eye text-center"></i></a>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucune Offre à afficher</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

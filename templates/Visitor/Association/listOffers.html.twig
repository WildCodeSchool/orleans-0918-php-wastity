{% extends 'Visitor/Association/layoutAssociation.html.twig' %}

{% block title %}Offer index{% endblock %}
{% block stylesheets %}{{ encore_entry_link_tags('css/appAssociation') }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="container mb-2">
            <div class="row justify-content-center text-center">
                <div>
                    <p class="fa text-center text-success mt-3 mb-2"><strong>Liste des offres en attente</strong></p>
                </div>
            </div>
        </div>
        <div class="container px-0 mb-5 pb-5">
            <div class="row justify-content-center">

            {% for appointment in appointments %}
                {{ render(controller(
                    'App\\Controller\\AssociationController::showOneOffer', {'association':association.id, 'offer':appointment.id}
                )) }}
            {% endfor %}
            </div>
        </div>
        <div class="d-flex justify-content-center mt-5">
            {{ knp_pagination_render(appointments) }}
        </div>
    </div>
{% endblock %}
{% extends 'Visitor/Association/layoutAssociation.html.twig' %}

{% block title %}Offer index{% endblock %}
{% block stylesheets %}{{ encore_entry_link_tags('css/appAssociation') }}{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center">Liste des offres en attente</h1>
        <div class="row justify-content-center">
            {% for offer in offers %}

                    <div class="col-12 col-sm-6 col-lg-4 pb-3">
                    <div class=" associationOfferBorder">
                        <img class="card-img-top" src="{{ offer.picture }}" alt="Image de l'offre">
                        <div class="card-body">
                            <p class="card-text"><strong>Produits:</strong> {{ offer.description }}</p>
                            <p class="card-text"><strong>Quantit√©:</strong> {{ offer.weight }} kg </p>
                            {% for id, distance in distances %}
                                {% if id==offer.company.id %}
                            <p class="card-text"><strong>Distance:</strong> {{ distance }} km </p>
                                {% endif %}
                            {% endfor %}
                            <div class=" d-flex justify-content-end">
                                <a href="{{ path('association_show_offer', {'association' : association.id , 'offer' : offer.id} ) }}" class="btn btn-association align-content-end">Voir l'offre</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
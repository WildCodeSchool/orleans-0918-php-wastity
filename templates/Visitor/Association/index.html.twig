{% extends 'Admin/layoutAdmin.html.twig' %}

{% block title %}Association index{% endblock %}

{% block header %}
    <div class="row">
        <a class="col-md-3 text-md-right text-left" href="{{ path('admin_index') }}">
            <i class="fas fa-chevron-left">Retour au panneau d'administration</i></a>
        <h1 class="col-md text-center">Liste des Associations</h1>
        <div class="offset-md-3"></div>
    </div>
{% endblock %}

{% block body %}
    <div class="container">

        <table class="table table table table-striped mt-5 mb-2">
            <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Ville</th>

                <th scope="col">
                    <div class="d-none d-md-block">Adresse</div>
                </th>

                <th class="text-center" scope="col">Voir plus</th>
            </tr>
            </thead>
            <tbody>
            {% for association in associations %}
                <tr>
                    <td>{{ association.name }}</td>
                    <td>{{ association.town }}</td>
                    <td>
                        <div class="d-none d-md-block">{{ association.adress }}</div>
                    </td>
                    <td>
                        <div class="text-center">
                            <a href="{{ path('association_show', {'id': association.id}) }}">
                                <i class="far fa-eye text-center"></i></a>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucune Association Ã  afficher</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

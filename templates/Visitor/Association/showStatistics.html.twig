{% extends 'Visitor/Association/layoutAssociation.html.twig' %}

{% block title %}Wastity - Statistiques Association{% endblock %}

{% block body %}
    <div class="row justify-content-center text-center">
        <div>
            <p class="fa text-center text-success mt-3 mb-2"><strong>Statistiques</strong></p>
        </div>
    </div>
    <div class="container">
        <div class="row text-success">
            <h1><strong>Depuis votre inscription :</strong></h1>
        </div>
        <div class="row justify-content-center ">
            <table class="infos">
                <tbody>
                <tr>
                    <th>{{ offers|length }}</th>
                    <td>offres livrées,</td>
                </tr>
                <tr>
                    <th>{{ countCompany }}</th>
                    <td>associations bénéficiaires</td>
                </tr>
                <tr>

                    <th class="pr-3">{{ weightTotal }} Kg</th>
                    <td>sauvés du gaspillage</td>
                </tr>
                </tbody>

            </table>

        </div>
    </div>
{% endblock %}
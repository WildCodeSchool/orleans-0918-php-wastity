    </div>
{% endblock %}

{% block body %}
    <div class="row justify-content-center text-center">
        <div>
            <p class="fa-2x text-center text-success mt-3 mb-2"><strong>Modification des informations</strong></p>
        </div>
        <div class="col-12 text-center text-success mt-3 mb-3">
            <i class="far fa-edit fa-4x"></i>
        </div>
    </div>
    {{ include('Visitor/Association/_form.html.twig', {'button_label': 'Mettre à jour mon Association'}) }}

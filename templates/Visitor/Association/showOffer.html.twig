{% extends 'Visitor/Association/layoutAssociation.html.twig' %}

{% block title %}Offer index{% endblock %}
{% block stylesheets %}{{ encore_entry_link_tags('css/appAssociation') }}{% endblock %}

{% block header %}
    <div>
        <div class="row header">
            <a class="col-1 text-center" href="{{ path('association_list_offers', {'id' : association.id}) }}"><i class="fas fa-chevron-left"></i></a>
            <h1 class="col text-center">{{ association.name }}</h1>
            <a class="col-1"><img src="{{ asset('build/images/logo-wastity_blanc.png') }}" class="img-fluid wastity_blanc"></a>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="card">
                <div class="card-header align-items-center">
                    <h3 class="col-12 mt-2 mb-0">{{ offer.description|slice(0,25) ~ '...' }}</h3>
                    <p>proposée par l'entreprise {{ company }}</p>
                </div>
                <div class="card-body">
                    <div class="row">
                        <ul class="col-6">
                            <li class="mt-2"><i class="fas fa-clock mr-2 mr-md-4"></i>{{ offer.end ? offer.end|date('d/m/Y H:i') : '' }}</li>
                            <li class="mt-2"><i class="fas fa-dumbbell mr-2 mr-md-4"></i>{{ offer.weight }} Kg </li>

                            {% if distance %}
                                <li class="mt-1"><i class="fas fa-map-marker-alt mr-2 mr-md-4"></i>{{ distance }} km </li>
                            {% endif %}

                        </ul>
                        <img class="col-6"
                             src="{{ offer.picture ? vich_uploader_asset(offer, 'pictureFile') : asset('/build/images/wastityPlaceHolder.png') }}"
                             alt="ImageOffre"/>
                        <p class="col-12 mt-1"><strong class="text-success">Description</strong>
                            : {{ offer.description }}
                        </p>
                        <p class="col-12 mt-1"><strong class="text-success">Informations complémentaires</strong>
                            : {{ offer.complementary }}</p>

                    </div>
                </div>
                <a href="{{ path('association_accept_offer', {'association' : association.id , 'offer' : offer.id}) }}"
                   class="offset-3 col-6 mt-2 mb-2 btn btn-success">Accepter l'offre</a>
            </div>
        </div>
    </div>
{% endblock %}

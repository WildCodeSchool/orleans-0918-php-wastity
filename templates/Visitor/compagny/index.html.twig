{% extends 'base.html.twig' %}

{% block title %}Présentation Entreprise{% endblock %}

{% block body %}
    {% block header %}
        <div class="row">
            <h1 class="col text-center">Présentation Entreprise</h1>
        </div>
    {% endblock %}
    <div class="container">

        <table class="table">
            <thead>
            <tr>
                <th>Type</th>
                <th>Nom</th>
                <th>Adresse</th>
                <th>Code Postal</th>
                <th>Ville</th>
                <th>Telephone</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for compagny in compagnyes %}
                <tr>
                    <td>{{ compagny.type }}</td>
                    <td>{{ compagny.name }}</td>
                    <td>{{ compagny.adress }}</td>
                    <td>{{ compagny.postalCode }}</td>
                    <td>{{ compagny.city }}</td>
                    <td>{{ compagny.phone }}</td>
                    <td>{{ compagny.email }}</td>
                    <td>
                        <a href="{{ path('compagny_show', {'id': compagny.id}) }}">show</a>
                        <a href="{{ path('compagny_edit', {'id': compagny.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('compagny_new') }}">Nouveau</a>
    </div>

{% endblock %}

{% extends 'Visitor/Company/layoutCompany.html.twig' %}

{% block title %}Offer{% endblock %}

{% block body %}
    <h1>Offer</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ offer.id }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ offer.picture }}</td>
            </tr>
            <tr>
                <th>Weight</th>
                <td>{{ offer.weight }}</td>
            </tr>
            <tr>
                <th>Start</th>
                <td>{{ offer.start ? offer.start|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>End</th>
                <td>{{ offer.end ? offer.end|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ offer.description }}</td>
            </tr>
            <tr>
                <th>Complementary</th>
                <td>{{ offer.complementary }}</td>
            </tr>
            <tr>
                <th>Start_time</th>
                <td>{{ offer.startTime ? offer.startTime|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>End_time</th>
                <td>{{ offer.endTime ? offer.endTime|date('H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('offer_index') }}">back to list</a>

    <a href="{{ path('offer_edit', {'id': offer.id}) }}">edit</a>

    {{ include('offer/_delete_form.html.twig') }}
{% endblock %}

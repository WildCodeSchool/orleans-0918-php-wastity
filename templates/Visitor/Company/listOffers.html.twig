{% extends 'Visitor/Company/layoutCompany.html.twig' %}

{% block title %}Annonces{% endblock %}

{% block body %}
    <div class="row header">
        <a class="col-1" href="{{ path('profile_index') }}"><i class="fas fa-home"></i></a>
        <h1 class="col text-center">Annonces</h1>
        <a class="col-1 mr-2" href="/logout"><i class="fas fa-unlock text-danger"></i></a>
    </div>
    <div class="row justify-content-center">
        <a class="btn btn-info mt-4 mb-1"
           href="{{ path('offer_new') }}">{{ button_label|default('Nouvelle offre') }}</a>
    </div>

<h1 class="text-center">Liste des offres en attente</h1>


<div class="container">
    <div class="row justify-content-center">
    {% for offer in company.offers %}
            {{ render(controller(
                'App\\Controller\\CompanyController::showOneOffer', {'company':company.id, 'offer':offer.id}
            )) }}
    {% endfor %}
    </div>
    </div>

{% endblock %}

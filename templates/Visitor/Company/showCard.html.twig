<div class="card comp">
    <div class="card-header">
        <div class="card-header px-0 align-items-center">
            <h3 class="col-12 mt-2 mb-0"> {{ offer.description }}</h3>
        </div>
    </div>
    <div class="card-body">
        <div class="row align-items-center">
            <ul class="col-6">
                <li class="">
                    <i class="fas fa-clock"></i> {{ offer.end ? offer.end|date('d/m/Y H:i') : '' }}
                </li>
                <li class=""><i class="fas fa-dumbbell"></i> {{ offer.weight }}Kg</li>
            </ul>
            <img class="col-6"
                 src="{{ offer.picture ? vich_uploader_asset(offer, 'pictureFile') : asset('/build/images/wastityPlaceHolder.png') }}"
                 alt="ImageOffre"/>
        </div>
        <details class="my-2">
            <summary class="btn btn-outline-secondary  col-10 offset-1 col-sm-6 offset-sm-3 my-3"><i class="fas fa-search-plus mr-2"></i>Voir plus</summary>
            <div>
                <p class=""><strong class="text-info">Description</strong>
                    : {{ offer.description }}
                </p>
                <p class=""><strong class="text-info">Informations compl√©mentaires</strong>
                    : {{ offer.complementary }}</p>
            </div>
            <div class="row justify-content-center">
                <a class=" btn btn-outline-info mt-2 btn-block w-50"
                   href="{{ path('company_offer_edit', {'offer': offer.id, 'company': company.id}) }}">
                    <i class="fas fa-edit text-white"></i> {{ button_label|default('Modifier') }}
                </a>
            </div>
        </details>

    </div>
</div>


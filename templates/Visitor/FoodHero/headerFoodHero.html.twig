{% block header %}
    <div class="row header">
        <a class="col-3 col-md-4" href="{{ path('profile_index') }}"><i class="fas fa-home fa-2x"></i></a>
        {% if foodhero is defined %}
            <h1 class="col text-center">{{ foodhero.user.firstname }} {{ foodhero.user.lastname  }}</h1>
            <a class="col-3 text-right"><img src="{{ asset('build/images/logo-wastity_blanc.png') }}" class="img-fluid wastity_blanc"></a>
            <a class="col-12 col-md-1 text-center" href="/logout"><i class="fas fa-unlock"> Déconnexion</i></a>
        {% else %}
            <h1 class="col text-center">Inscription</h1>
            <a class="col-3 text-right"><img src="{{ asset('build/images/logo-wastity_blanc.png') }}" class="img-fluid wastity_blanc"></a>
            <a class="col-12 col-md-1 text-center" href="/logout"><i class="fas fa-unlock"> Déconnexion</i></a>
        {% endif %}
    </div>
{% endblock %}
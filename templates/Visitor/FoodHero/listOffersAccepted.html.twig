{% extends 'Visitor/FoodHero/layoutFoodHero.html.twig' %}

{% block title %}Offres acceptées{% endblock %}
{% block stylesheets %}{{ encore_entry_link_tags('css/appFoodHero') }}{% endblock %}

{% block header %}
    {% include 'Visitor/FoodHero/headerFoodHero.html.twig' %}
{% endblock %}

{% block body %}
    <div class="container mb-5 pb-5">
        <div class="row justify-content-center text-center">
            <div>
                <p class="fa-2x text-center text-primary mt-3 mb-2"><strong>Liste des offres à livrer</strong></p>
            </div>
        </div>
        <div class="row justify-content-center">
            {% for appointment in appointments %}
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <p class="col"> Expire le : {{ appointment.end ? offer.end|date('d/m/Y H:i') : '' }} </p>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <ul class="col-6">
                                <li><strong class="text-primary">Quantité :</strong> {{ appointment.weight }} Kg</li>

                                <li class="mt-1"><strong class="text-primary">Entreprise :</strong> {{ appointment.company.name }}
                                </li>
                                <li><i class="fas {{ appointment.status.classfontawesome }}" style="color:{{ offer.status.color }}"></i> {{ appointment.status.statustext }}</li>
                            </ul>
                            <img class="col-6"
                                 src="{{ appointment.picture ? vich_uploader_asset(appointment, 'pictureFile') : asset('/build/images/wastityPlaceHolder.png') }}"
                                 alt="ImageOffre"/>
                            <p class="col-12 mt-1"><strong class="text-primary">Description</strong>
                                : {{ appointment.description }}
                            </p>
                            <p class="col-12 mt-1"><strong class="text-primary">Informations complémentaires</strong>
                                : {{ appointment.complementary }}</p>

                        </div>
                    </div>
                    {% if appointment.status.constStatus == 'WaitingForRecuperation' %}
                    <a href="{{ path('foodhero_collect_offer', {'offer' : appointment.id}) }}"
                       class="offset-6 col-6 mt-2 btn btn-primary">Offre récupérée</a>
                    {% endif %}
                    {% if appointment.status.constStatus == 'WaitingForDelivery' %}
                        <a href="#"
                           class="offset-6 col-6 mt-2 btn btn-primary">Offre livrée</a>
                    {% endif %}
                </div>
            {% else %}
                <p><strong>Aucune Offre à afficher</strong></p>
            {% endfor %}
            <div class="d-flex justify-content-center mt-5">
                {{ knp_pagination_render(appointments) }}
            </div>


        </div>
    </div>
{% endblock %}
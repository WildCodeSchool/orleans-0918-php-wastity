{% extends 'Visitor/FoodHero/layoutFoodHero.html.twig' %}

{% block title %}Offer index{% endblock %}
{% block stylesheets %}{{ encore_entry_link_tags('css/appFoodHero') }}{% endblock %}

{% block body %}
    <div class="row header">
        <a class="col-1" href="{{ path('profile_index') }}"><i class="fas fa-home"></i></a>
        <h1 class="col text-center">Annonces</h1>
    </div>
    <div class="container">
        <h1 class="text-center">Liste des offres en attente</h1>
        <div class="row justify-content-center">
            {% for offer in offers %}
                <div class="col-12 col-sm-6 col-lg-4 pb-3">
                    <div class=" foodheroOfferBorder">
                        <img class="card-img-top" src="{{ vich_uploader_asset(offer, 'pictureFile') }}"
                             alt="ImageOffre">
                        <div class="card-body">

                            <p class="card-text"><strong>Produits:</strong> {{ offer.description }}</p>
                            <p class="card-text"><strong>Quantité:</strong> {{ offer.weight }} kg </p>

                            <div class=" d-flex justify-content-end">
                                <a href="{{ path('foodhero_show_offer', {'foodhero' : foodhero.id , 'offer' : offer.id} ) }}"
                                   class="btn btn-foodhero align-content-end">Voir l'offre</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <p><strong>Aucune Offre à afficher</strong></p>
            {% endfor %}

        </div>
    </div>
{% endblock %}
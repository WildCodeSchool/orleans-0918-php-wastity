{% extends 'Visitor/FoodHero/layoutFoodHero.html.twig' %}

{% block title %}Offer index{% endblock %}
{% block stylesheets %}{{ encore_entry_link_tags('css/appFoodHero') }}{% endblock %}

{% block body %}
    <div class="row header">
        <a class="col-1" href="{{ path('profile_index') }}"><i class="fas fa-home"></i></a>
        <h1 class="col text-center">Annonces</h1>
    </div>

    <div class="container">
        <h1 class="text-center">Liste des offres en attente</h1>

        <div class="row justify-content-center">
            {% if app.session is not null %}
                {% for offer in offers %}
                    {{ render(controller(
                        'App\\Controller\\FoodHeroController::showOneOffer', {'foodhero' : foodhero.id , 'offer' : offer.id}
                    )) }}
                    <div class=" d-flex justify-content-end">
                        <a href="{{ path('foodhero_show_offer', {'foodhero' : foodhero.id , 'offer' : offer.id} ) }}"
                           class="btn btn-foodhero align-content-end">Voir l'offre</a>
                    </div>
                {% endfor %}
            {% endif %}
        </div>

    </div>

{% endblock %}

<div class="card">
    <a href="{{ path('foodhero_show_offer', {'foodhero' : foodhero.id , 'offer' : offer.id}) }}">
        <div class="card-header d-flex align-items-center">
            <h3>{{ offer.description|slice(0,25) ~ '...' }}</h3>
        </div>

        <div class="card-body">
            <div class="row align-items-center">
                <ul class="col-6">
                    <li class="mt-1"><i class="fas fa-clock mr-2 mr-md-4"></i>{{ offer.end ? offer.end|date('d/m/Y H:i') : '' }}</li>
                    <li class="mt-1"><i class="fas fa-dumbbell mr-2 mr-md-4"></i>{{ offer.weight }} Kg </li>

                    {% if app.session.get('latitude') is not null %}
                        {% if distance %}
                            <li class="mt-1"><i class="fas fa-map-marker-alt mr-2 mr-md-4"></i> {{ distance ? distance~ 'km' : 'non calculée' }} </li>
                        {% endif %}
                        {% if distanceTotal %}
                            <li class="mt-1">
                                <i class="fas fa-route mr-2 mr-md-4"></i> {{ distanceTotal ? distanceTotal~ 'km' : 'non calculée' }} </li>
                        {% endif %}
                    {% endif %}
                </ul>
                <img class="imgOffer col-6 "
                     src="{{ offer.picture ? vich_uploader_asset(offer, 'pictureFile') : asset('/build/images/wastityPlaceHolder.png') }}"
                     alt="ImageOffre"/>

            </div>
        </div>
    </a>

</div>

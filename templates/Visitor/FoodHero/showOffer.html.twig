<div class="card fh">
    <div class="card-header align-items-center">
        <h3 class="col-12 mt-2 mb-0">{{ offer.description }}</h3>
        <p>proposée par {{ offer.company.name }}</p>
    </div>
    <div class="card-body">
        <div class="row">
            <ul class="col-6">
                <li class="mt-2">
                    <strong>à livrer à : </strong>{{ offer.association.name }}
                </li>
                <li class="mt-2"><i
                            class="fas fa-clock mr-2 mr-md-4"></i>{{ offer.end ? offer.end|date('d/m/Y H:i') : '' }}
                </li>
                <li class="mt-2"><i class="fas fa-dumbbell mr-2 mr-md-4"></i>{{ offer.weight }} Kg</li>
                {{ render(controller(
                    'App\\Controller\\FoodHeroController::showDistanceOffer', {'foodhero':foodhero.id, 'offer':offer.id}
                )) }}

            </ul>
            <img class="col-6"
                 src="{{ offer.picture ? vich_uploader_asset(offer, 'pictureFile') : asset('/build/images/wastityPlaceHolder.png') }}"
                 alt="ImageOffre"/>
        </div>
        <details>
            <summary class="btn btn-outline-secondary"><i class="fas fa-search-plus mr-2"></i>Voir plus</summary>
            <div>
                <p class="col-12 mt-1"><strong>Description</strong>
                    : {{ offer.description }}
                </p>
                <p class="col-12 mt-1"><strong>Informations complémentaires</strong>
                    : {{ offer.complementary }}</p>
            </div>
            <div class="row">
                {{ render(controller(
                    'App\\Controller\\FoodHeroController::showMapOffer', {'foodhero':foodhero.id, 'offer':offer.id}
                )) }}
                <a href="{{ path('foodhero_accept_offer', {'foodhero' : foodhero.id , 'offer' : offer.id}) }}"
                   class="offset-1 col-5 my-2 btn ">Accepter l'offre</a>

            </div>
        </details>

    </div>
</div>



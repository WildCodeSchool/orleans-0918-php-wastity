{% extends 'Visitor/FoodHero/layoutFoodHero.html.twig' %}

{% block title %}Offer index{% endblock %}
{% block stylesheets %}{{ encore_entry_link_tags('css/appFoodHero') }}{% endblock %}

{% block body %}
    <div class="row header">
        <a class="col-1" href="{{ path('profile_index') }}"><i class="fas fa-home"></i></a>
        <h1 class="text-center">Descriptif d'une offre</h1>
    </div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-sm-6 col-lg-4 pb-3">
                <div class=" foodheroOfferBorder">
                    <img class="card-img-top" src="{{vich_uploader_asset(offer, 'pictureFile') }}" alt="ImageOffre">
                    <div class="card-body">
                        <p class="card-text"><strong>Produits:</strong> {{ offer.description }}</p>
                        <p class="card-text"><strong>Quantit√©:</strong> {{ offer.weight }} kg </p>

                        <div class=" d-flex justify-content-end">
                            <a href="{{ path('foodhero_accept_offer', {'foodhero' : foodhero.id , 'offer' : offer.id}) }}" class="btn btn-foodhero align-content-end">Accepter l'offre</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}